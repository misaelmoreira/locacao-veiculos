        
        <!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Shop in style</h1>
                    <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
                </div>
            </div>
        </header>
        <!-- Section Veiculo-->
        <% Veiculo.all.each do |veiculo|%>
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row ">
                    <div class="col-sm-12 mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <a href="/loja/locacao/<%= veiculo.id%>">
                                <img class="card-img-top imgCarros" src="https://combustivel.app/imgs/t650/consumo-onix-lt-1-0.jpg" alt="..." />
                            </a>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><%= veiculo.nome %></h5>
                                    <!-- Product price-->
                                    <%= number_to_currency(veiculo.valor)%>                                    
                                    <div class="detalhesVeiculos">
                                        <div class="detalhesVeiculoContainer">
                                            <p>Cor</p>
                                            <p class="card-text"><%= veiculo.cor%></p>
                                        </div>
                                        <div class="detalhesVeiculoContainer"> 
                                            <p>Qnt de Passageiros</p>
                                            <p class="card-text"><%= veiculo.qnt_passageiros%></p>
                                        </div>
                                        <div class="detalhesVeiculoContainer" >
                                            <p>Marca</p>
                                            <p class="card-text"><%= veiculo.marca.nome%></p>
                                        </div>                                        
                                    </div>
                                </div>
                            </div>
                            <!-- Product actions-->                            
                        </div>
                    </div>                    
                </div>
            </div>
        </section>
        <% end %>
        <!-- Fim Section Veiculo-->
        